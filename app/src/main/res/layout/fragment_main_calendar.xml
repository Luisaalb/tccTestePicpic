<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CalendarFragment">

    <LinearLayout
        android:id="@+id/linear_calendario"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_copo"
        android:elevation="5dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:text="Selecione algum dia para alterar ou excluÃ­r registros" />

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            app:eventsEnabled="true"
            app:forwardButtonSrc="@drawable/ic_baseline_arrow_forward_ios_24"
            app:headerColor="@color/branco"
            app:headerLabelColor="#000"
            app:previousButtonSrc="@drawable/ic_aocontrario"
            app:selectionColor="@color/colorPrimary"
            app:todayLabelColor="@color/colorPrimary" />

    </LinearLayout>

</FrameLayout>