<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".fragment.CadastroHorarioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            style="@style/TextoCadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Selecione seus horÃ¡rios"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="367dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_copo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/linha_roxa2"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtSelecione"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Lembretes"
                    android:textColor="@color/corPrincipal"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="Selecione o tipo do lembrete abaixo:"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top">

                <Spinner
                    android:id="@+id/spLembretes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edt_cadastro_pqn"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textInputLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                >

                <TextView
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Selecione os dias desejados:"
                    android:textColor="@color/corPrincipal"
                    android:textSize="16sp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/linha_roxa3"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbDom"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:checked="false"
                            android:text="Dom" />

                        <CheckBox
                            android:id="@+id/cbSeg"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Seg" />

                        <CheckBox
                            android:id="@+id/cbTer"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Ter" />

                        <CheckBox
                            android:id="@+id/cbQua"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="Qua" />

                        <CheckBox
                            android:id="@+id/cbQui"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="Qui" />

                        <CheckBox
                            android:id="@+id/cbSex"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="Sex" />

                        <CheckBox
                            android:id="@+id/cbSab"
                            style="@style/rdbInsulina"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="Sab" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/linearGlicemia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtmiau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp">

                <Button
                    android:id="@+id/btnAddHora"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edt_cadastro1"
                    android:text="Salvar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/corPrincipal"
                    android:textSize="16sp" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnPronto6"
            style="@style/BtnProntoCadastro"
            android:layout_marginTop="64dp"
            android:shadowColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>